<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_prevention_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="16dp"
    android:paddingLeft="16dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bottom_sheet_prevention_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="null"
                android:textStyle="bold"
                android:textSize="17dp"
                android:gravity="center"
                android:paddingTop="16dp"
                android:textColor="#000" />


            <ImageView
                android:id="@+id/bottom_sheet_prevention_header"
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/news_placeholder"/>

            <TextView
                android:id="@+id/bottom_sheet_prevention_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="null"
                android:textSize="15dp"
                android:textColor="#000"
                android:gravity="center"/>

        <TextView
            android:id="@+id/bottom_sheet_prevention_citation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="null"
            android:textSize="10dp"
            android:textColor="#000"
            android:paddingBottom="16dp"
            android:gravity="center"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>
